@using MicroShop.Web.Domain.DTOs.ProductDTOs
@model List<ProductDTO>

<h1>Lista de Produtos</h1>

<a asp-action="ProductCreatePage" class="btn btn-primary mb-3">Criar Produto</a>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Estoque</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Stock</td>
                    <td>
                        <a asp-action="ProductUpdatePage" class="btn btn-success" asp-route-id="@product.Id">
                            <i class="fas fa-edit">Edit</i>
                        </a>
                        <a asp-action="ProductDeletePage" class="btn btn-danger" asp-route-id="@product.Id">
                            <i class="fas fa-trash">Delete</i>
                        </a>
                        <a asp-action="AddProductToCart" asp-controller="Carts" class="btn btn-success" asp-route-id="@product.Id">
                            <i class="fas fa-edit">Add To Cart</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum produto encontrado.</p>
}
